        <activity android:name=".motion.activity.MotionActivity" />
        <activity android:name=".motion.activity.DemoActivity" />
        <activity android:name=".motion.activity.ViewPagerActivity" />
        <activity android:name=".motion.activity.ViewPagerActivity2" />
