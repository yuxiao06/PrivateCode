        <activity android:name=".animation.recyclerview.carousel.CarouselLayoutActivity" />
        <activity android:name=".animation.recyclerview.circle.CircleLayoutActivity" />
        <activity android:name=".animation.recyclerview.gallery.GalleryLayoutActivity" />
        <activity android:name=".animation.recyclerview.rotate.RotateLayoutActivity" />
        <activity android:name=".animation.recyclerview.scale.ScaleLayoutActivity" />
